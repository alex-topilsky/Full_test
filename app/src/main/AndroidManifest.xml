<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexander_topilskii.full_test">

    <uses-permission android:name="ACTION_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".lifecycle.MyActivity1"/>
        <activity android:name=".lifecycle.MyActivity2"/>
        <activity android:name=".Logging.LogShower"/>

        <service android:name=".lifecycle.MyService"/>
        <receiver android:name=".lifecycle.MyBroadcastReceiver" android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.RECEIVE_BOOT_COMPLETED" />
                <action android:name="android.net.conn.ACTION_TIME_CHANGED" />
                <action android:name="android.net.conn.ACTION_CAMERA_BUTTON" />
                <action android:name="android.net.conn.ACTION_SCREEN_OFF" />
                <action android:name="android.net.conn.ACTiON_SCREEN_ON" />
                <action android:name="android.net.conn.ACTION_TIMEZONE_CHANGED" />
                <action android:name="TOPILSKII_INTENT"/>
                <action android:name="android.net.conn.WIFI_STATE_CHANGED" />
            </intent-filter>
        </receiver>
    </application>
</manifest>